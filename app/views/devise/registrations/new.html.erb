<br><br>
<h2>Registration</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

   <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", required: true %>
  </div>

   <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", required: true %>
  </div>

   <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.telephone_field :phone_number, maxlength: 10, required: true %>
  </div>

   <div class="field">
    <%= f.label :aadhar_number %><br />
    <%= f.number_field :aadhar_number, autofocus: true, autocomplete: "aadhar_number", maxlength: 10, required: true %>
  </div>

  <div class="field">
    <%= f.radio_button :gender, 'Male', :checked => true, required: true %> 
    <%= label :Male, 'Male' %>
    <%= f.radio_button :gender, 'Female' %>
    <%= label :Female, 'Female' %>
    <%= f.radio_button :gender, 'Other' %>
    <%= label :Female, 'Other' %>
  </div>

  <div class="field">
    <%= label :date_of_birth, 'Date Of Birth' %><br>
    <%= f.date_field :date_of_birth, data:{ provide:'datepicker' }, max: Date.new(2016, 01, 01) , required: true%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Register" %>
  </div>
<% end %>